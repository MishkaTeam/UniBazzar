@page
@model Server.Areas.Admin.Pages.BasicInfo.Stores.CreateModel

@{
    var pageTitle =
        $"{Resources.DataDictionary.CreateOf} {Resources.DataDictionary.Store}";

    ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}

<form method="post">

    <section-form>

        <fieldset>

            <section-form-header>
                @(pageTitle)
            </section-form-header>

            <partial name="PartialViews/_DisplayPageMessages" />

            <ub-full-input asp-for="CreateViewModel.Name" />

            <ub-full-input asp-for="CreateViewModel.Description" />

            <ub-full-input asp-for="CreateViewModel.PhoneNumber" />
            
            <ub-full-input asp-for="CreateViewModel.Address" />
            
            <ub-full-input asp-for="CreateViewModel.Culture" />

            <ub-full-input asp-for="CreateViewModel.LogoUrl" />

            <ub-full-checkbox asp-for="CreateViewModel.IsActive" />

        </fieldset>

        <section-form-buttons>
            <button-create />
            <button-reset />
        </section-form-buttons>

    </section-form>

</form>