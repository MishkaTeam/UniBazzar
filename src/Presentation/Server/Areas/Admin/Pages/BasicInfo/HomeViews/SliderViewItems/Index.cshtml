@page "{homeViewId:guid}"
@model Server.Areas.Admin.Pages.BasicInfo.HomeViews.SliderViewItems.IndexModel

@{
    var pageTitle =
        Resources.DataDictionary.SliderItems;

    ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}


<div class="row justify-content-between px-2 my-2">
    <a class="col-auto btn btn-primary" asp-page="../Index" asp-area="Admin">@(Resources.ButtonCaptions.Back)</a>
    <h5 class="col-auto">[@(Model.HomeView.TypeName)] @(Model.HomeView.Title)</h5>
    <a class="col-auto btn btn-primary" asp-page="Create" asp-route-homeViewId="@(Model.HomeView.Id)" asp-area="Admin">@(Resources.ButtonCaptions.Create)</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            @(Html.Ub_DisplayStringWithTh(Resources.DataDictionary.Title))
            @(Html.Ub_DisplayStringWithTh(Resources.DataDictionary.Order))
            @(Html.Ub_DisplayStringWithTh(Resources.DataDictionary.Interval))
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sliderView in Model.ViewModel)
        {
            <tr class="align-middle">
                <td>
                    <img class="rounded-3" width="100" src="@(sliderView.ImageUrl)" />
                </td>
                @(Html.Ub_DisplayStringWithTd(sliderView.Title))
                @(Html.Ub_DisplayIntegerWithTd(sliderView.Ordering))
                @(Html.Ub_DisplayIntegerWithTd(sliderView.Interval))
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">

                        <a asp-page="Update" asp-route-homeViewId="@(Model.HomeView.Id)"
                            asp-route-sliderItemId="@(sliderView.Id)" class="btn btn-warning">@(Resources.ButtonCaptions.Edit)</a>

                        <a asp-page="Delete" asp-route-homeViewId="@(Model.HomeView.Id)"
                            asp-route-sliderItemId="@(sliderView.Id)" class="btn btn-danger">@(Resources.ButtonCaptions.Delete)</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>