@page "{homeViewId:guid}/{productItemId:guid}"
@model Server.Areas.Admin.Pages.BasicInfo.HomeViews.ProductViewItems.DeleteModel

@{
	var pageTitle =
		$"{Resources.DataDictionary.DeleteOf} {Resources.DataDictionary.ProductItem}";

	ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}


<form method="post">

	<section-form>

		<input hidden asp-for="DeleteViewModel.Id" dir="ltr" />
		<input hidden asp-for="DeleteViewModel.HomeViewId" dir="ltr" />

		<fieldset disabled>

			<section-form-header>
				@(pageTitle)
			</section-form-header>

			<partial name="PartialViews/_DisplayPageMessages" />

			<ub-full-input asp-for="DeleteViewModel.ProductName" />

			<ub-full-input asp-for="DeleteViewModel.Ordering" />

		</fieldset>

		<section-form-buttons>
			<button-delete />
		</section-form-buttons>

	</section-form>

</form>
