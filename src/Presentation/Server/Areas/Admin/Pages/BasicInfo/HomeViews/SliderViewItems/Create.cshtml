@page "{homeViewId:guid}"
@model Server.Areas.Admin.Pages.BasicInfo.HomeViews.SliderViewItems.CreateModel

@{
    var pageTitle =
        $"{Resources.DataDictionary.CreateOf} {Resources.DataDictionary.SliderItem}";

    ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}


<form method="post" enctype="multipart/form-data">

    <section-form>

        <fieldset>

            <section-form-header>
                @(pageTitle)
            </section-form-header>

            <partial name="PartialViews/_DisplayPageMessages" />

            <input hidden asp-for="CreateViewModel.HomeViewId" />

            <input class="m-2" asp-for="SliderImage" />

            <ub-full-input asp-for="CreateViewModel.Title" />

            <ub-full-input asp-for="CreateViewModel.Interval" />

            <ub-full-input asp-for="CreateViewModel.NavigationUrl" />

            <ub-full-input asp-for="CreateViewModel.Ordering" />

        </fieldset>

        <section-form-buttons>
            <button-create />
            <button-reset />
        </section-form-buttons>

    </section-form>

</form>
