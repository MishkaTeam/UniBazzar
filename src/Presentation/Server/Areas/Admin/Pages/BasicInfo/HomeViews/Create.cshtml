@page
@model Server.Areas.Admin.Pages.BasicInfo.HomeViews.CreateModel

@{
	var pageTitle =
		$"{Resources.DataDictionary.CreateOf} {Resources.DataDictionary.HomeView}";

	ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}


<form method="post">

	<section-form>

		<fieldset>

			<section-form-header>
				@(pageTitle)
			</section-form-header>

			<partial name="PartialViews/_DisplayPageMessages" />

			<div class="mb-3">
				<label asp-for="CreateViewModel.Type" class="form-label"></label>
				<select asp-for="CreateViewModel.Type" asp-items="Model.ViewTypeList" class="form-select"></select>
				<span asp-validation-for="CreateViewModel.Type" class="field-validation-valid text-danger"></span>
			</div>

			<ub-full-input asp-for="CreateViewModel.Title" />

			<ub-full-input asp-for="CreateViewModel.Ordering" />

		</fieldset>

		<section-form-buttons>
			<button-create />
			<button-reset />
		</section-form-buttons>

	</section-form>

</form>