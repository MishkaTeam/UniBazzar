@page "{id:guid}"
@model Server.Areas.Admin.Pages.BasicInfo.HomeViews.UpdateModel

@{
    var pageTitle =
        $"{Resources.DataDictionary.UpdateOf} {Resources.DataDictionary.HomeView}";

    ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}


<form method="post">

    <section-form>

        <fieldset>

            <section-form-header>
                @(pageTitle)
            </section-form-header>

            <partial name="PartialViews/_DisplayPageMessages" />

            <input hidden asp-for="UpdateViewModel.Id" />

            <ub-full-input asp-for="UpdateViewModel.Title" />

            <ub-full-input asp-for="UpdateViewModel.Ordering" />

        </fieldset>

        <section-form-buttons>
            <button-save />
            <button-reset />
        </section-form-buttons>

    </section-form>

</form>
