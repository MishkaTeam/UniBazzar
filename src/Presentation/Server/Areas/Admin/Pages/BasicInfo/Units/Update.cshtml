@page "{Id}"
@model Server.Areas.Admin.Pages.BasicInfo.Units.UpdateModel
@{
	var pageTitle =
	$"{Resources.DataDictionary.UpdateOf} {Resources.DataDictionary.Unit}";

	ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}

<form method="post" >

	<section-form >
		<fieldset>
			<section-form-header>
				@(pageTitle)
			</section-form-header>

			<partial name="PartialViews/_DisplayPageMessages" />
			<input hidden asp-for="UpdateViewModel.Id" dir="ltr" />

			<ub-full-input asp-for="UpdateViewModel.Title"/>

			<ub-full-select asp-for="UpdateViewModel.BaseUnitId" asp-items="Model.BaseUnitList" />

			<ub-full-input asp-for="UpdateViewModel.Ratio" />

		</fieldset>

		<section-form-buttons>
			<button-save />
			<button-reset />
		</section-form-buttons>

	</section-form>

</form>
