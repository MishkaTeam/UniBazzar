@page
@model Server.Areas.Admin.Pages.BasicInfo.Customers.IndexModel
@{
}
<div class="my-2 float-end">
    <a class="btn btn-primary" asp-page="Create" asp-area="Admin">@(Resources.ButtonCaptions.Create)</a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">@(Resources.DataDictionary.Name)</th>
            <th scope="col">@(Resources.DataDictionary.Family)</th>
            <th scope="col">@(Resources.DataDictionary.NationalCode)</th>
            <th scope="col">@(Resources.DataDictionary.Mobile)</th>
            
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var model in Model.ViewModel)
        {
            <tr>
                <td>@(model.FirstName)</td>
                <td>@(model.LastName)</td>
                <td>@(model.NationalCode)</td>
                <td>@(model.Mobile)</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a asp-page="Update" asp-route-Id="@(model.Id)" type="button" class="btn btn-warning">@(Resources.ButtonCaptions.Edit)</a>
                        <a asp-page="Delete" asp-route-Id="@(model.Id)" type="button" class="btn btn-danger">@(Resources.ButtonCaptions.Delete)</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>