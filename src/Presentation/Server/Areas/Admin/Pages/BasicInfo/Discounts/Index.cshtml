@page
@model Server.Areas.Admin.Pages.BasicInfo.Discounts.IndexModel
@{
    var pageTitle =
        Resources.DataDictionary.DiscountCodes;

    ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}

<div class="my-2 float-end">
    <a class="btn btn-primary" asp-page="Create" asp-area="Admin">@(Resources.ButtonCaptions.Create)</a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            @(Html.Ub_DisplayStringWithTh(Resources.DataDictionary.Title))
            @(Html.Ub_DisplayStringWithTh(Resources.DataDictionary.DiscountCode))
            @(Html.Ub_DisplayStringWithTh(Resources.DataDictionary.IsActive))
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var discount in Model.ViewModel)
        {
            <tr>
                @(Html.Ub_DisplayStringWithTd(discount.Title))
                @(Html.Ub_DisplayStringWithTd(discount.DiscountCode))
                @(Html.Ub_DisplayBooleanWithTd(discount.IsActive))
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a asp-page="Update" asp-route-id="@(discount.Id)" type="button" class="btn btn-warning">@(Resources.ButtonCaptions.Edit)</a>
                        <a asp-page="Delete" asp-route-id="@(discount.Id)" type="button" class="btn btn-danger">@(Resources.ButtonCaptions.Delete)</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
