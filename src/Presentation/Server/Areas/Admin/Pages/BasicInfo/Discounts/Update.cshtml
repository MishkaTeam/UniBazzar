@page "{id}"
@model Server.Areas.Admin.Pages.BasicInfo.Discounts.UpdateModel
@{
	var pageTitle =
	$"{Resources.DataDictionary.UpdateOf} {Resources.DataDictionary.DiscountCode}";

	ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}

<form method="post">

	<section-form>
		<fieldset>
			<section-form-header>
				@(pageTitle)
			</section-form-header>

			<partial name="PartialViews/_DisplayPageMessages" />
			<input hidden asp-for="ViewModel.Id" dir="ltr" />

			<ub-full-input asp-for="ViewModel.Title" />

			<ub-full-input asp-for="ViewModel.DiscountCode" />

			<ub-full-checkbox asp-for="ViewModel.IsActive" />

		</fieldset>

		<section-form-buttons>
			<button-save />
			<button-reset />
		</section-form-buttons>

	</section-form>

</form>
