@page
@model Server.Areas.Admin.Pages.BasicInfo.Products.IndexModel

@{
    var pageTitle =
        Resources.DataDictionary.Products;

    ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}

<div class="my-2 float-end">
    <a class="btn btn-primary" asp-page="Create" asp-area="Admin">@(Resources.ButtonCaptions.Create)</a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">@(Resources.DataDictionary.Name)</th>
            <th scope="col">@(Resources.DataDictionary.ProductType)</th>
            <th scope="col">@(Resources.DataDictionary.SKU)</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.ViewModel)
        {
            <tr>
                <td>@(product.Name)</td>
                <td>@(product.ProductType.ToString())</td>
                <td>@(product.SKU)</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a asp-page="Update" asp-route-Id="@(product.Id)" type="button" class="btn btn-warning">@(Resources.ButtonCaptions.Edit)</a>
                        <a asp-page="Delete" asp-route-Id="@(product.Id)" type="button" class="btn btn-danger">@(Resources.ButtonCaptions.Delete)</a>
                        <div class="btn-group" role="group" dir="rtl">
                            <a class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">عملیات</a>
                            <ul class="dropdown-menu">
                                <li><a asp-page="ProductFeatures/Index" asp-route-Id="@(product.Id)" class="dropdown-item">@(Resources.ButtonCaptions.ManageOf) @(Resources.DataDictionary.Features)</a></li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>