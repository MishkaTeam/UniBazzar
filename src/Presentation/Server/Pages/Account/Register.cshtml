@page
@model Server.Pages.RegisterModel
@{
    Layout = "_Security";
}

<section class="inner-page mx-auto my-auto" id="register-page">
    <div class="container py-2 py-md-5">
        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1">
                <div class="content">
                    <div class="row">
                        <form method="post">
                            <section-form>
                                <fieldset>
                                    <section-form-header>
                                        سلام! لطفا برای امکانات بیشتر توی سایت ما ثبت نام کنید
                                    </section-form-header>

                                    <div class="col-12 col-lg-5 text-center m-auto">
                                        <img class="m-auto" src="/images/login.png" alt="">
                                    </div>

                                    <partial name="PartialViews/_DisplayPageMessages" />

                                    <ub-full-input asp-for="Model.Mobile" />

                                    <ub-full-password-input asp-for="Model.Password" />
                                </fieldset>

                                <section-form-buttons>
                                    <uni-button label="@(Resources.DataDictionary.Register)" />
                                </section-form-buttons>

                            </section-form>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>